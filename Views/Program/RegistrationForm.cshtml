@model StudentActivity.ViewModel.StudentProgram
@{
    ViewBag.Title = "RegistrationForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration Form</h2>


@using (Html.BeginForm("Save", "Program"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Id)
        @Html.TextBoxFor(m => m.Student.Id, new { @class = "form-control" })
        @*Html.ValidationMessageFor(m => m.Customer.Name)*@
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Programs)
        @Html.DropDownListFor(m => m.Student.Programs, new SelectList(Model.Program, "Id", "Title"), "Select Program", new { @class = "form-control" })
       
    </div>

    <button type="submit" class="btn btn-primary">
        Save
    </button>
}
